<mvc:View
  controllerName="demo.fiori.pedidos.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <App>
    <Page title="Pedidos (Demo UI5)">
      <content>
        <List
          id="ordersList"
          headerText="Pedidos de venta"
          items="{orders>/}">
          <StandardListItem
            title="{orders>name}"
            description="{orders>email}"
            info="{orders>address/city}"
            infoState="Success" />
        </List>
      </content>
    </Page>
  </App>

</mvc:View>
